<Window x:Class="WPF_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid RenderTransformOrigin="0.199,0.486">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="379*"/>
            <ColumnDefinition Width="421*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="2">
            <Label Content="Input1"/>
            <TextBox Width="100" Height=" 30" Text="{Binding Path=Num1, Mode=TwoWay}"/>
            <Label Content="Input2"/>
            <TextBox Width="100" Height=" 30" Text="{Binding Path=Num2, Mode=TwoWay}"/>
            <Label Content="Result"/>
            <TextBox Width="100" Height=" 30" Text="{Binding Path=Result, Mode=TwoWay}"/>

            <!--<Slider IsSnapToTickEnabled="True" Name="MSlider" Minimum="0" Maximum="100"/>-->
            
        </StackPanel>
    </Grid>
</Window>
